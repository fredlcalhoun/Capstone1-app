<h1></h1>
<br>
<style type="text/css">
  form input{
    color: black !important;
  }
</style>

<script type="text/javascript">
  $(document).ready(function() {
    $('#Carousel').carousel({
        interval: 5000
    })
});
</script>

<section>
<h2>Lost pets</h2>
<div class="container">
    <div class="row">
    <div class="col-md-12">
                <div id="Carousel" class="carousel slide">
                 
                <ol class="carousel-indicators">
                <% @lost_pets.each_slice(4).with_index do |four_lost_pets, index| %>
                    <li data-target="#Carousel" data-slide-to="<%= index %>" class="<%= index == 0 ? 'active' : '' %>"></li>
                <% end %>
                </ol>
                 
                <div class="carousel-inner">

                <% @lost_pets.each_slice(4) do |four_lost_pets| %>
                <div class="item">
                  <div class="row">
                    <% four_lost_pets.each do |lost_pet| %>
                    <div class="col-md-3"><a href="/pets/<%= lost_pet.id %>" class="thumbnail"><img src="<%= lost_pet.images.first.url %>" alt="Image" class="img-fluid"></a>
                    </div>
                <% end %>
                  </div>
                </div>  
                <% end %>

                 
                </div><!--.carousel-inner-->

                  <a data-slide="prev" href="#Carousel" class="left carousel-control">‹</a>
                  <a data-slide="next" href="#Carousel" class="right carousel-control">›</a>
                </div><!--.Carousel-->
                 
    </div>
  </div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#Carousel').carousel({
        interval: 5000
    });
});
</script>


<section>
<h2>Found Pets</h2>
<div class="container">
    <div class="row">
      <div class="col-md-12">
                <div id="Carousel" class="carousel slide">
                 
                <ol class="carousel-indicators">
                <% @found_pets.each_slice(4).with_index do |four_found_pets, index| %>
                    <li data-target="#Carousel" data-slide-to="<%= index %>" class="<%= index == 0 ? 'active' : '' %>"></li>
                <% end %>
                </ol>
                 
                <div class="carousel-inner">

                <% @found_pets.each_slice(4) do |four_found_pets| %>
                <div class="item">
                  <div class="row">
                    <% four_found_pets.each do |found_pet| %>
                    <div class="col-md-3"><a href="/pets/<%= found_pet.id %>" class="thumbnail"><img src="<%= found_pet.images.first.url %>" alt="Image" style="max-width:100%;"></a></div>
                    <% end %>
                  </div>
                </div>  
                <% end %>

                 
                </div><!--.carousel-inner-->

                  <a data-slide="prev" href="#Carousel" class="left carousel-control">‹</a>
                  <a data-slide="next" href="#Carousel" class="right carousel-control">›</a>
                </div><!--.Carousel-->
                 
      </div>
    </div>

</div><!--.container-->

    <p><%= @pets %></p>
      <%= form_tag "/pets", method: "get" do %>
      Animal:
      <select name="form_animal">
        <option value="dog">dog</option>
        <option value="cat">Cat</option>
      </select>
      Breed: <input type="text" name="form_breed">
      Color: <input type="text" name="form_color">
      City: <input type="text" name="form_city">
      State: <input type="text" name="form_state">
      Neighborhood: <input type="text" name="form_neighborhood">
      <input type="submit" value="Submit">
      <% end %>

